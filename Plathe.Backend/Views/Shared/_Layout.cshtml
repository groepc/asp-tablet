<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Plathé Backend</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="page-container" class="header-navbar-fixed">
        <nav id="sidebar">
            <div class="sidebar-content">
                <div class="side-header side-content">
                    <a href="/" class="h5 text-white">
                        <span class="h4 font-w600">Plathe</span>
                    </a>
                </div>
                <div class="side-content">
                    <ul class="nav-main">
                        <li class="nav-main-heading"><span class="sidebar-mini-hide">Menu</span></li>
                        <li>
                            <a href="/" class="active"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Dashboard</span></a>
                        </li>
                        @if (User.IsInRole("sales"))
                        {
                            <li>
                                <a href="/Tickets/" class="active"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Tickets bestellen</span></a>
                            </li>
                            <li>
                                <a href="/Sales/" class="active"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Verkoop</span></a>
                            </li>
                            <li>
                                <a href="/Subscriptions/" class="active"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Abonnmenten</span></a>
                            </li>
                        }
                        @if (User.IsInRole("backoffice"))
                        {
                            <li>
                                <a href="/Shows/" class="active"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Voorstellingen</span></a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>

        <header class="content-mini" id="header-navbar">
            <ul class="nav-header pull-right">
                <li>
                    <div class="btn-group">
                        <button type="button" data-toggle="dropdown" class="btn btn-default btn-image dropdown-toggle">
                            @HttpContext.Current.User.Identity.Name
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-header">Profile</li>
                            <li>
                                <a href="/Auth/LogOut/" tabindex="-1">
                                    <i class="si si-logout pull-right"></i>Uitloggen
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>

        </header>
        <main id="main-container" style="min-height: 471px;">
            <div class="content">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }
                @RenderBody()
            </div>
        </main>
        <footer class="content-mini content-mini-full font-s12 bg-gray-lighter clearfix" id="page-footer">
            <div class="pull-right">
                Gemaakt door <span class="font-w600">Perry Faro </span>
            </div>
            <div class="pull-left">
                <span class="font-w600">Plathe Backend 1.0</span> &copy; @DateTime.Now.Year
            </div>
        </footer>
    </div>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>