@model Plathe.Backend.Models.SalesViewModel
@{
    ViewBag.Title = "Verkoop";
}

<div class="row">
    <div class="col-sm-9">
        <h3 style="margin-bottom: 25px;">Verkoop Bioscoop bonnen/rittenkaart</h3>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-sm-10">
                    Aantal rittenkaarten
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.AmountRideCard, new SelectList(Enumerable.Range(0, 5)), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    Aantal bioscoopbonnen
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.AmountBioscoop, new SelectList(Enumerable.Range(0, 5)), new { @class = "form-control" })
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-12 clearfix">
                    <button type="submit" class="btn btn-lg btn-success pull-right">Bestelling afronden <i class="glyphicon glyphicon-arrow-right"></i></button>
                </div>
            </div>
        }
    </div> 
</div>