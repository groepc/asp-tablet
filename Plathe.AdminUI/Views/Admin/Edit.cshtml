@model Plathe.AdminUI.Models.AppUser
@{ ViewBag.Title = "Edit"; }
<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Gebruiker bewerken
                </h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>
            
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label class="col-sm-5 control-label">Voornaam</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.FirstName, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Achternaam</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">E-mailadres</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Gebruikersnaam</label>
                    <div class="col-sm-7">
                        <p class="form-control-static">@Model.UserName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label">Wachtwoord</label>
                    <div class="col-sm-7">
                        <input name="password" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-7">
                        <button type="submit" class="btn btn-primary">Opslaan</button>
                        @Html.ActionLink("Annuleren", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
