@model Plathe.AdminUI.Models.LoginModel
@{ ViewBag.Title = "Login";}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Log in om verder te gaan</h3>
            </div>
            <div class="panel-body">
                    @Html.ValidationSummary(false,"", new { @class = "alert alert-danger"})

                @using (Html.BeginForm())
                {
                    <fieldset>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Name, new {@class = "form-control", @placeholder = "Gebruikersnaam"})
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.Password, new {@class = "form-control", @placeholder = "Wachtwoord"})
                        </div>
                        <button class="btn btn-primary btn-sm btn-block" type="submit">Inloggen</button>
                    </fieldset>
                }
