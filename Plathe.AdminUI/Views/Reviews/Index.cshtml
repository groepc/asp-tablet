@model IEnumerable<Plathe.Domain.Entities.Review>

@{
    ViewBag.Title = "Film reviews in wachtrij";
}

<h2>Film reviews in wachtrij</h2>

<table class="table">
    <tr>
        <th>
            Titel
        </th>
        <th>
            Ticket code
        </th>
        <th>
            Review inhoud
        </th>
        <th>
            Waardering
        </th>
        <th>
            E-mailadres
        </th>
        <th>
            Gebruikersnaam
        </th>
        <th>
            Datum
        </th>
        <th>
            
        </th>
    </tr>
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketID)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Content)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.ActionLink("Goedkeuren", "Approve", new {id = item.ReviewID}) |
                    @Html.ActionLink("Afkeuren", "Reject", new {id = item.ReviewID})
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="8">Geen nieuwe reviews gevonden.</td>
        </tr>
    }

</table>
