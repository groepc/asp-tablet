@using Plathe.AdminUI.Models
@model RoleEditModel
@{ ViewBag.Title = "Edit Role";}
<div class="row">

    @Html.ValidationSummary()
    @using (Html.BeginForm())
    {
        <input type="hidden" name="roleName" value="@Model.Role.Name" />
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Gebruiker toevoegen aan @Model.Role.Name</h3>
                    </div>
                    <table class="table table-striped">
                        @if (Model.NonMembers.Count() == 0)
                        {
                            <tr>
                                <td colspan="2">Alle gebruikers zijn gekoppeld</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <th>Gebruiker</th>
                                <th>Koppel aan de rol</th>
                            </tr>
                            foreach (AppUser user in Model.NonMembers)
                            {
                                <tr>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>
                                        <input type="checkbox" name="IdsToAdd" value="@user.Id">
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Gebruiker verwijderen van @Model.Role.Name</h3>
                    </div>
                    <table class="table table-striped">
                        @if (Model.Members.Count() == 0)
                        {
                            <tr>
                                <td colspan="2">Er zijn geen gebruikers gekoppeld</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <th>Gebruiker</th>
                                <th>Verwijder van de rol</th>
                            </tr>
                            foreach (AppUser user in Model.Members)
                            {
                                <tr>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>
                                        <input type="checkbox" name="IdsToDelete" value="@user.Id">
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Opslaan</button>
                @Html.ActionLink("Annuleren", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
