@model Plathe.Domain.Entities.Movie

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Film";
}

<div class="container">
    <div class="col-sm-2">

        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="active"><a href="/movie/">Alle films</a></li>
            <li role="presentation" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
                    Genre<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>Actie</li>
                    <li>Animatie</li>
                    <li>Avontuur</li>
                    <li>Comedy</li>
                    <li>Fantasy</li>
                    <li>Kinderfilm</li>
                    <li>Nederlands</li>
                    <li>Thriller</li>
                </ul>
          </ul>

    </div>

    <div class="col-sm-8">
        <h2>@Html.DisplayFor(model => model.Title)</h2>
        <p>Duur: @Html.DisplayFor(model => model.Duration) minuten</p>
        <p>Regisseur: @Html.DisplayFor(model => model.Director)</p>
        <p>Acteurs: @Html.DisplayFor(model => model.MainCharacters)</p>
        <p>@Html.DisplayFor(model => model.Description)</p>

        <div class="btn-group" role="group">
            <a href="@Html.DisplayFor(modelItem => Model.linkToWebsite)" target="blank" class="btn btn-default" role="button">Officiële website</a>
            <a href="@Html.DisplayFor(modelItem => Model.linkToTrailer)" target="blank" class="btn btn-default" role="button">Trailer</a>
            <a href="@Html.DisplayFor(modelItem => Model.linkToImdb)" target="blank" class="btn btn-default" role="button">IMDB</a>
        </div>
    </div>

    <div class="col-sm-2">
        <img src="@Html.DisplayFor(model => model.Image)" alt="@Html.DisplayFor(model => model.Title)">
        <p> </p>
        <div style="margin-bottom: 10px">
            @if (Model.RatingDiscrimination == true)
            {
                <img src="~/Content/img/discriminatie.svg" width="35" />
            }
            @if (Model.RatingDrugs == true)
            {
                <img src="~/Content/img/drugs.svg" width="35" />
            }
            @if (Model.RatingFear == true)
            {
                <img src="~/Content/img/angst.svg" width="35" />
            }
            @if (Model.RatingLanguage == true)
            {
                <img src="~/Content/img/groftaalgebruik.svg" width="35" />
            }
            @if (Model.RatingSex == true)
            {
                <img src="~/Content/img/seks.svg" width="35" />
            }
            @if (Model.RatingViolence == true)
            {
                <img src="~/Content/img/geweld.svg" width="35" />
            }
        </div>
        <p> </p>
        <p>3D: @Html.DisplayFor(model => model.ThreeDimensional)</p>
        <p>Taal: @Html.DisplayFor(model => model.Language)</p>
        <p>Genre: @Html.DisplayFor(model => model.genre.Name)</p>
    </div>
</div>

