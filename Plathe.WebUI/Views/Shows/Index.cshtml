@using Plathe.Domain.Entities
@model Plathe.WebUI.Models.ShowViewModel

@{
    ViewBag.Title = "Voorstellingen";
}

<h2>Voorstellingen</h2>

<table class="table">
@foreach (var item in Model.Shows.ToList()) {
    <tr>
        <td>
            <a href="/Movie/Details/@Html.DisplayFor(modelItem => item.MovieID)"><img src='@item.Movie.Image' /></a>
</td>
        <td>
            @Html.DisplayFor(model => item.Movie.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.RoomName)
        </td>
        <td>
            Ondertiteling: @Html.DisplayFor(modelItem => item.Subtitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.getFormatedStartingTime)
        </td>
        <td>
            3D: @(item.ThreeDimensional ? "Ja" : "Nee")
        </td>
        <td>
            @Html.ActionLink("Reserveren", "TicketSelection", new {id = item.ShowID})
        </td>
    </tr>
}
</table>
