@model Plathe.Domain.Entities.Show

@* Author = Mieke *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h2>Voeg nieuwe voorstelling toe</h2>
    </div>

    @using (Html.BeginForm("Create", "AdminShow"))
    {
        <div class="panel-body">
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                if (property.PropertyName != "ShowId")
                {
                    if (property.PropertyName != "Tickets")
                    {
                        if (property.PropertyName != "GetFormatedStartingTime")
                        {
                            if (property.PropertyName != "Movie")
                            {
                                if (property.PropertyName != "Room")
                                {
                                    <div class="form-group">
                                        <label>@(property.DisplayName ?? property.PropertyName)</label>
                                        @if (property.PropertyName == "Description")
                                        {
                                            @Html.TextArea(property.PropertyName, null, new { @class = "form-control", rows = 10 })
                                        }
                                        @*@if (property.PropertyName == "ThreeDimensional")
                                            {
                                                @Html.CheckBox(property.PropertyName, new { @checked = "checked" })
                                            }*@
                                        else
                                        {
                                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                                        }
                                        @Html.ValidationMessage(property.PropertyName)
                                    </div>
                                }
                            }
                        }
                    }
                }
            }

            <div>
                <input type="submit" value="Opslaan" class="btn btn-primary" />
                @Html.ActionLink("Annuleer en ga terug naar overzicht", "Index", null, new
                {
                    @class = "btn btn-default"
                })
            </div>
        </div>
    }

</div>