@model Plathe.Models.Show

@{
    ViewBag.Title = "Voorstelling";
}

<h2>Voorstelling: @Html.DisplayFor(model => model.Movie.Title)</h2>

<hr />

<div class="row">
    
    <div class="col-sm-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>3D</td>
                    @if (Model.Movie.ThreeDimensional)
                    {
                        <td>Ja</td>
                    }
                    else
                    {
                        <td>Nee</td>
                    }
                </tr>
                <tr>
                    <td>Rolstoel</td>
                    <td>Onbekend</td>
                </tr>
                <tr>
                    <td>Tijd</td>
                    <td>@Html.DisplayFor(model => model.StartingTime)</td>
                </tr>
            </tbody>
        </table>

        <p>
            @Html.ActionLink("Terug naar overzicht", "Index")
        </p>
    </div>

    <div class="col-sm-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Reserveren</h4>
                <hr />
                
            </div>
        }
    </div>

    
</div>

