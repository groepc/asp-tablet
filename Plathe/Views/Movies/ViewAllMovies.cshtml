@model IEnumerable<Plathe.Models.Movie>

@{
    ViewBag.Title = "ViewAllMovies";
}

<h2>Alle films</h2>
<br/>

@foreach (var item in Model)
{
    <div class="col-md-4 viewallmovies">
        <div style="background: #fff; border: 1px solid #B5B5B5; border-radius: 5px; padding-top: 10px;">
            <a href="/Movies/ViewAMovie/@Html.DisplayFor(modelItem => item.MovieID)">
                <img src='@item.Image'/>
                <br/>
                <h1 style="font-size: 18px; color: #222;">@item.Title</h1>
            </a>
        </div>
    </div>
}


